<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="server_address"
        android:title="@string/pref_title_server_address"
        android:defaultValue="@string/pref_value_server_address"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
    android:key="server_port"
    android:title="@string/pref_title_server_port"
    android:defaultValue="@integer/pref_value_server_port"
    android:selectAllOnFocus="true"
    android:inputType="numberSigned"
    android:singleLine="true"
    android:maxLines="1" />



</PreferenceScreen>